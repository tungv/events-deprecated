{
  "name": "@events/server",
  "version": "1.0.0-rc.7",
  "main": "./build/index.js",
  "scripts": {
    "prepare": "rm -rf build; yarn build",
    "build:watch": "babel --watch=./src --out-dir=./build --ignore __tests__,__mocks__",
    "build": "babel ./src -d ./build --ignore __tests__,__mocks__",
    "start": "micro",
    "debug": "node --inspect ./node_modules/.bin/micro",
    "test": "REDIS_URL=redis://localhost:6379/4 jest --forceExit --coverage",
    "post": "ab -p assets/test.json -T application/json -c 50 -n 500 localhost:8080/commit"
  },
  "dependencies": {
    "clui": "^0.3.6",
    "es6-promisify": "^5.0.0",
    "kefir": "^3.7.3",
    "lodash": "^4.17.4",
    "micro": "^8.0.3",
    "micro-boom": "^1.1.0",
    "micro-cors": "^0.0.4",
    "microrouter": "^2.2.2",
    "redis": "^2.8.0",
    "redis-functional": "^0.2.4-1"
  },
  "devDependencies": {
    "@events/subscriber": "^1.0.0-rc.7",
    "awaiting": "^3.0.0",
    "babel-cli": "^6.26.0",
    "babel-jest": "^20.0.3",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-env": "^1.6.0",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-stage-3": "^6.24.1",
    "jest": "^20.0.4",
    "request": "^2.81.0",
    "request-promise": "^4.2.1",
    "test-listen": "^1.0.2"
  },
  "babel": {
    "presets": [
      "stage-3",
      [
        "env",
        {
          "targets": {
            "node": 8
          }
        }
      ],
      "flow"
    ],
    "plugins": [
      "transform-class-properties"
    ]
  },
  "jest": {
    "testRegex": "/__tests__/.*\\.spec\\.js$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/build/"
    ]
  },
  "pkg": {
    "scripts": "build/**/*.js"
  }
}
